# AI Tele FastAPI 项目环境变量配置示例
# 复制此文件为 .env 并填入实际值

# 应用基础配置
APP_NAME=AI Tele
DEBUG=false
LOG_LEVEL=INFO
COMPUTER_CONFIG_ID=

# 数据库配置
DATABASE_URL=sqlite:///./ai_tele.db

# SSH 隧道配置（用于连接远程数据库）
SSH_HOST=
SSH_PORT=22
SSH_USERNAME=
SSH_PASSWORD=
SSH_KEY_PATH=
SSH_REMOTE_HOST=localhost
SSH_REMOTE_PORT=3306
SSH_LOCAL_PORT=3307

# 数据库连接配置
DB_USERNAME=
DB_PASSWORD=
DB_HOST=
DB_PORT=
DB_NAME=

# OpenAI 配置
OPENAI_URL=https://api.openai.com/v1
OPENAI_API_KEY=your_openai_api_key_here

# 微信机器人配置
WECHAT_BOT_URL=https://wxbot.da-mai.com/api/v1/wxbot/user/send
WECHAT_BOT_TOKEN=damai2025wxbot
WECHAT_DEFAULT_WXID=58065692621@chatroom

# CORS 配置
ALLOWED_ORIGINS=["http://localhost:3000"]

# 文件上传配置
UPLOAD_DIR=./uploads

# 服务器配置
HOST=127.0.0.1
PORT=8000

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_USERNAME=default
REDIS_PASSWORD=
REDIS_SSL=false
REDIS_DECODE_RESPONSES=true

# 事件总线配置
WORKER_COUNT=4
MAX_QUEUE_SIZE=1000
DEAD_LETTER_QUEUE_SIZE=100
DEFAULT_WAIT_FOR_RESULT=true
DEFAULT_TIMEOUT=30.0
MAX_RETRY_COUNT=3
RETRY_DELAY=1.0
HEALTH_CHECK_INTERVAL=30
ENABLE_PERSISTENCE=true
PERSISTENCE_PATH=./logs/events

# 调度器配置
TASK_TYPE=data_sync_service

# 腾讯云 COS 配置
COS_SECRET_ID=your_cos_secret_id
COS_SECRET_KEY=your_cos_secret_key
COS_REGION=ap-guangzhou
COS_BUCKET=your_cos_bucket_name

# 讯飞录音文件转写大模型配置
XUNFEI_APP_ID=your_xunfei_app_id
XUNFEI_ACCESS_KEY_ID=your_xunfei_access_key_id
XUNFEI_ACCESS_KEY_SECRET=your_xunfei_access_key_secret
XUNFEI_API_URL=https://office-api-ist-dx.iflyaisol.com
